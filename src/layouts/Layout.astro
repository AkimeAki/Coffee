---
import { ViewTransitions } from "astro:transitions";

interface Props {
	title?: string | undefined;
	description?: string | undefined;
}

const { title, description } = Astro.props;
const serviceTitle = "Aki Coffee☕";
const pageTitle = title === undefined ? serviceTitle : `${title} | ${serviceTitle}`;
const pageDescription = description ?? "Akiです。のんびり日記書いてます。";

const path = Astro.url.pathname.replace(/^\//, "").replace(/\.html$/, "");
---

<!doctype html>
<html lang="ja" transition:animate="fade">
	<head>
		<!-- Google Tag Manager -->
		<script is:inline>
			// prettier-ignore
			(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
			new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
			j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
			'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
			})(window,document,'script','dataLayer','GTM-KP36GT3H');
		</script>
		<!-- End Google Tag Manager -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={pageDescription} />
		<meta name="format-detection" content="email=no,telephone=no,address=no" />
		<meta name="author" content="Aki" />
		<link rel="canonical" href={`https://aki.coffee/${path}`} />
		<link rel="icon" href="/favicon.ico" />
		<title>{pageTitle}</title>
		<link rel="sitemap" href="/sitemap-index.xml" />
		<ViewTransitions />
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript>
			<iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-KP36GT3H"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe>
		</noscript>
		<!-- End Google Tag Manager (noscript) -->

		<div id="wrapper">
			<header>
				<a id="title-link" href="/"><h1 id="title">Aki ☕</h1></a>
			</header>
			<main>
				<slot />
			</main>
		</div>
		<style is:global>
			@font-face {
				font-family: "GenJyuuGothicL";
				src: url(/GenJyuuGothicL-Light.ttf);
			}

			* {
				/* インターフェース */
				box-sizing: border-box;
				padding: 0;

				/* マージン・パディング */
				margin: 0;

				/* フォント */
				font-family: GenJyuuGothicL;
				font-size: 18px;
				line-height: 1.6;

				color: #777777;
			}

			*:focus {
				outline: none;
			}

			:root {
				background-color: white;
			}

			html,
			body {
				width: 100%;
				height: 100%;
				overflow: hidden;
			}

			#wrapper {
				width: 100%;
				height: 100svh;
				overflow-y: scroll;
			}

			ul,
			ol {
				padding-block-start: 0;
				padding-block-end: 0;
				padding-inline-start: 40px;
				margin-inline-start: 0;
				margin-inline-end: 0;
			}

			a {
				color: #1976d2;
			}

			p {
				margin-bottom: 10px;
			}

			p:last-of-type {
				margin-bottom: 0;
			}

			img {
				max-width: 100%;
				height: auto;
			}
		</style>

		<style lang="scss">
			header {
				padding: 40px 0 0 0;
				max-width: 1200px;
				margin: 0 auto;
				text-align: center;

				#title-link {
					color: inherit;
					text-decoration: none;

					#title {
						display: inline-block;
						font-size: 25px;
						font-weight: 300;
					}
				}
			}
		</style>
	</body>
</html>
