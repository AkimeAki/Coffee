---
import Layout from "@/layouts/Layout.astro";
import { formatDate } from "@/lib/format-date";
import { getListContents } from "@/lib/microcms";
import type { Blog } from "@/lib/microcms";

const posts = await getListContents<Blog>("blogs");
---

<Layout>
	<main id="main">
		{
			posts.contents.map((post) => (
				<a class="post-card" href={`/${post.id}`} aria-label={`記事『${post.title}』を読む`}>
					<div class="post-content-wrapper">
						<div class="post-content-bg" />
						<div class="post-content-bg-image">
							<img src={`https://r2.aki.coffee/${post.id}.png`} />
						</div>
						<div class="post-content" set:html={post.contents} />
					</div>
					<div>
						<h2 class="post-title">{post.title}</h2>
						<time class="post-date" datetime={post.publishedAt ?? post.createdAt}>
							{formatDate(post.publishedAt ?? post.createdAt)}
						</time>
					</div>
				</a>
			))
		}
	</main>
</Layout>

<style lang="scss">
	#main {
		padding: 0 20px;
		width: 100%;
		max-width: 814px;
		margin: 0 auto;
		padding: 25px;
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		column-gap: 30px;
		row-gap: 40px;

		.post-card {
			position: relative;
			display: flex;
			flex-direction: column;
			gap: 15px;
			text-decoration: none;

			&:hover {
				.post-content-wrapper {
					.post-content-bg-image {
						opacity: 1;
					}
				}
			}

			.post-content-wrapper {
				position: relative;
				padding: 30px;
				border-radius: 30px;
				height: 150px;
				overflow: hidden;

				.post-content-bg,
				.post-content-bg-image {
					position: absolute;
					top: 0;
					left: 0;
					width: 100%;
					height: 100%;
					user-select: none;
					pointer-events: none;
				}

				.post-content-bg {
					background-color: #fff1ea;
					z-index: -2;
				}

				.post-content-bg-image {
					z-index: -1;
					opacity: 0;
					transition-duration: 400ms;
					transition-property: opacity;

					img {
						width: 100%;
						height: 100%;
						object-fit: cover;
						filter: blur(5px);
					}
				}

				.post-content {
					:global(p) {
						font-size: 5px;
					}
				}
			}

			.post-date {
				font-size: 15px;
			}

			.post-link {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
			}
		}
	}
</style>
